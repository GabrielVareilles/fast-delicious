<div class="container-profile show text-center">
  <div class="row">
  <div class="card-profile stick main-section col-xs-12 col-lg-3 ">
      <div class="card-content">
        <% avatar_url = @profile.picture.url || "http://placehold.it/150x150" %>
        <%= image_tag avatar_url, class: "avatar-large" %>
        <h2><%= "#{@profile.user_name}"%></h2>
        <h2><%= "#{@profile.first_name} #{@profile.last_name}"%></h2>
        <p><%= current_user.email %></p>
        <br>
        <%= link_to "edit your profile", edit_profile_path(@profile), class: "btn btn-success"%>
      </div>
    </div>
    <div class="card-profile favorite-section col-xs-12 col-lg-8">
      <div class='favorite-hero'></div>
      <h1 class='favorite_head'> Your favorites recipes</h1>
      <div class='favorites'>
        <% if current_user and @favorites.length > 0 %>
        <% i = 1 %>
        <% @favorites.each do |favorite| %>
        <% recipe = Recipe.find(favorite.recipe_id) %>
        <%= render 'shared/card', recipe: recipe %>
        <% end %>
        <% else %>
        <h4><b>You don't have any favorite recipes? Go back and pick some!<b> </h4>
        <%= link_to 'Go Back', root_path, class: 'back_link' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
