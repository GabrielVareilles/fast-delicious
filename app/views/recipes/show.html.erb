<div class="container show text-center">
  <div class="row">

    <div class="picture-recipe col-xs-12 col-lg-4">
      <%= if @recipe.picture.url == nil
        image_tag('https://placeholdit.co//i/500x500?')
      else
        cl_image_tag @recipe.picture.url
      end
      %>
    </div>

    <div class="col-xs-12 col-lg-8">

      <div class="row">

        <div class="recipe-title col-xs-12 col-lg-12 redirect-left">
          <h3><%= @recipe.name %></h3>
        </div>

        <% @recipe.doses.each do |dose| %>

        <div class="card-ingredients col-xs-6 col-lg-3">
          <%= if dose.ingredient.picture.url == nil
            image_tag('https://placeholdit.co//i/150x150?')
          else
            cl_image_tag(dose.ingredient.picture.url, id: "ingredient-picture")
          end
          %>
          <div class="card-ingredients-description">
            <h2><%= dose.ingredient.name %>: <%= dose.quantity %><%= dose.unit %></h2>
            <%= link_to "Edit", edit_dose_path(dose)%>
          </div>

        </div>
        <%end%>

        <div class="infos col-xs-6 col-lg-12">
          <div class="number-person-eat redirect-left">
            <h4><i class="fa fa-user" aria-hidden="true"></i> : 1 person </h4>
          </div>

          <div class="cooking-time redirect-left">
            <h4><i class="fa fa-clock-o" aria-hidden="true"></i> Cooking : <%= @recipe.cooking_time %></h4>
          </div>
        </div>

        <div class="preparation-time redirect-left">
          <h4><%= if @recipe.preparation_time == nil
          else
            "Preparation: #{@recipe.preparation_time}"
          end
          %></h4>
        </div>
        <div class="description-recipe col-xs-12 col-lg-12 redirect-left" >
          <p><%= @recipe.description %></p>
        </div>


         <div class="col-xs-12 col-lg-12 redirect-left" >
          <p> Add your review !</p>


        <%= simple_form_for [@recipe, @review] do |f| %>
        <%= f.input :content, placeholder: 'write your review',label: "Add your review!" %>
        <%= f.input :rating ,placeholder: 'rate this recipe.',label: false %>
        <%= f.input :picture ,label: false %>
        <%= f.input :picture_cache, as: :hidden %>

        <%= f.submit "add a review", class: "btn btn-primary" %>
        <% end %>
        </div>


       <div class="col-xs-12 col-lg-12" >
          <h3><b> Reviews </b></h3>
          <br>
          <br>
      </div>


        <% @recipe.reviews.each do |review| %>
          <div class="cardreview col-xs-12 col-lg-4" id="reviews" style="width: 25rem, ;">
            <div class="card-block">
              <ul class = "list-inline">
                <% avatar_url = review.user.profile.picture.url || "http://placehold.it/30x30" %>
                <li> <%= image_tag avatar_url, class: "avatar" %></li>
                <li><h4 class="review-title"> <%= review.user.profile.user_name %> : <%= review.rating %> / 5</h4> </li>
              </ul>
              <div class ="card-img-top">
                <%= if review.picture.url == nil
                else
                  cl_image_tag review.picture.url
                  end %>
                </div>
                <p class="review-description"> <%= review.content %></p>
              </div>
              <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are you sure?" }%>
              <%= link_to "back", recipes_path %>
            </div>
           <% end %>
           </div>
        </div>
      </div>
    </div>
  </div>

