<div class="container">

<!-- Right Navigation -->
  <div class="grid-profile text-center hidden-xs hidden-sm">
      <div class="card-profile main-section">
        <div class="card-content">
          <% avatar_url = @profile.picture.url || "http://placehold.it/150x150" %>
          <%= image_tag avatar_url, class: "avatar-large" %>
          <h2><%= "#{@profile.first_name} #{@profile.last_name}"%></h2>
          <p><%= @profile.email %></p>

          <%= simple_form_for(@profile) do |f| %>
            <%= f.input :picture_cache, as: :hidden %>
            <%= f.input :picture %>
            <%= f.submit "Update Picture"%>
          <% end %>
        </div>
      </div>
      <div class="card-profile stats-section">
        <div class="card-content">
          <h3>3,536</h3>
          <p>contributions</p>
        </div>
      </div>
      <div class="card-profile">
        <div class="card-content">
          <h3>758</h3>
          <p>followers</p>
        </div>
      </div>
      <div class="card-profile">
        <div class="card-content">
          <h3>119</h3>
          <p>repositories</p>
        </div>
      </div>
      <div class="card-profile description-section">
        <div class="card-content">
          <h3>More about <%= @profile.first_name %></h3>
          <p class="text-justify"></p>
        </div>
      </div>
  </div>


  <!-- Mobile only -->

   <div class="grid-profile-mobile text-center hidden-md hidden-lg">
      <div class="card-profile main-section-mobile">
        <div class="card-content-">
          <% avatar_url = @profile.picture.url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar-large" %>
          <h2><%= "#{@profile.first_name} #{@profile.last_name}"%></h2>
          <p><%= @profile.email %></p>
          <%= simple_form_for(@profile) do |f| %>
            <%= f.input :picture_cache, as: :hidden %>
            <%= f.input :picture %>
            <%= f.submit "Update Picture"%>
          <% end %>
        </div>
      </div>
      <div class="card-profile stats-section-mobile">
        <div class="card-content">
          <h3>3,536</h3>
          <p>contributions</p>
        </div>
      </div>
      <div class="card-profile">
        <div class="card-content">
          <h3>758</h3>
          <p>followers</p>
        </div>
      </div>
      <div class="card-profile">
        <div class="card-content">
          <h3>119</h3>
          <p>repositories</p>
        </div>
      </div>
      <div class="card-profile description-section-mobile">
        <div class="card-content">
          <h3>More about <%= @profile.first_name %></h3>
          <p class="text-justify"></p>
        </div>
      </div>
  </div>

</div>

