<div class="container">

  <div class="row-sm-offset-3">
    <div class="col-xs-12 col-sm-12 col-lg-10 col-lg-10-offset-3">
      <h3>Login</h3>



      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>

          <%= f.input :email, required: false, placeholder: 'Email',label: false, autofocus: true, class: "form-control" %>
        </div>
        <span class="help-block"></span>

        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>

          <%= f.input :password, required: false, placeholder: 'Password',label: false, class: 'form-control' %>

        </div>

        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
