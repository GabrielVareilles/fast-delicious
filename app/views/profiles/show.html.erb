<div class="container-profile show text-center">
  <div class="row">
    <div class="kard hoverkard stick main-section col-xs-12 col-lg-3">
      <div class="kardheader">
        <% avatar_url = @profile.picture.url || "http://placehold.it/150x150" %>
        <%= image_tag avatar_url, class: "avatare" %>
        <div class="infoe">
          <div class="title"> Bienvenue, <%="#{@profile.user_name}"%>  !</div>
          <div class="desc"><%= "#{@profile.age} ans"%></div>
          <div class="desc"><%= "#{@profile.first_name} #{@profile.last_name}"%></div>
          <div class="desc"> Your favorite ingredient is : the <%=@profile.quote%> !</div>
          <div class="desc"> email : <%=current_user.email %></div>
          <br>
          <%= link_to "edit your profile", edit_profile_path(@profile), class: "btin"%>
        </div>
        <div class="bottom">
          <a class="btn btn-round btn-primary btn-twitter btn-sm" href="https://twitter.com/webmaniac">
            <i class="fa fa-twitter"></i>
          </a>
          <a class="btn btn-round btn-danger btn-sm" rel="publisher"
          href="https://plus.google.com/+ahmshahnuralam">
          <i class="fa fa-google-plus"></i>
        </a>
        <a class="btn btn-round btn-primary btn-sm" rel="publisher"
        href="https://plus.google.com/shahnuralam">
        <i class="fa fa-facebook"></i>
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="kard favorite-section col-xs-12 col-lg-8">
    <div class='favorite-hero'></div>

      <% if current_user and @favorites.length > 0 %>
       <h1 class='favorite_head'> Your favorites recipes</h1>
    <div class='favorites'>
      <% i = 1 %>
      <% @favorites.each do |favorite| %>
      <% recipe = Recipe.find(favorite.recipe_id) %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card-container">
          <%= link_to recipe_path(recipe) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= if recipe.picture.url == nil
            image_path('https://placeholdit.co//i/500x500?')
          else
            cl_image_path recipe.picture.url
          end
          %>')">
        </div>
        <%end%>

        <div class="link-box-profile">
          <%= link_to recipe_path(recipe) do %>
          <%=recipe.name.capitalize%>
          <% if recipe.reviews.size != 0 %>
          <% arr = [] %>
          <% recipe.reviews.each do |review| %>
          <% arr << review.rating %>
          <% end %>
          <% average = arr.inject{ |sum, el| sum + el }.to_f / arr.size %>
          <p> rating : <%= average.round(1) if average %> / 5</p>
          <% else %>
          <p> waiting for a rating !</p>
          <%end%>
          <%end%>
        </div>

      </div>
    </div>
    <% end %>
  </div>
    </div>
</div>
</div>


<% end %>
</div>
</div>
</div>
</div>
