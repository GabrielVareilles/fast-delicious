<div class="container text-center">


  <div class="row" class="picture-recipe" class="col-xs-12">
    <%= if @recipe.picture.url == nil
          image_tag('https://placeholdit.co//i/500x500?')
        else
          cl_image_tag @recipe.picture.url
        end
        %>
  </div>

  <div class="recipe">

    <div class="row" class="recipe-title" class="col-xs-12">
      <h3><%= @recipe.name %></h3>
    </div>

      <div class="row">
      <% @recipe.doses.each do |dose| %>
        <div class="col-xs-6 col-sm-4">
          <div class="card">
            <%= if dose.ingredient.picture.url == nil
                  image_tag('https://placeholdit.co//i/150x150?')
                else
                  cl_image_tag dose.ingredient.picture.url
                end
                %>
            <div class="card-description">
              <h2><%= dose.quantity %> <%= dose.unit %> <%= dose.description %> <%= dose.ingredient.name %></h2>
            </div>
          </div>
        </div>
      <% end %>
      </div>





      <div class="row" class="number-person-eat" class="col-xs-12">
        <h4> For 1 person </h4>
      </div>

      <div class="row" class="preparation-time" class="col-xs-12">
        <h4><%= if @recipe.preparation_time == nil
            else
              "Preparation: #{@recipe.preparation_time}"
            end
        %></h4>
      </div>

      <div class="row" class="cooking-time" class="col-xs-12">
        <h4> Cooking : <%= @recipe.cooking_time %></h4>
      </div>

      <div class="row" class="description-recipe" class="col-xs-12">
        <p><%= @recipe.description %></p>
      </div>


  </div>
</div>




